<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".ui.slideshow.SlideshowFragment">

<androidx.cardview.widget.CardView
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_300sdp"
    app:cardCornerRadius="@dimen/_10sdp">


    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/flag_image"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/country_tv"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USD"
                android:layout_marginLeft="@dimen/_5sdp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/come_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="00.00"
                android:layout_marginLeft="@dimen/_5sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5"/>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1.2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                >
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#4FA35B"
                    app:cardCornerRadius="@dimen/_16sdp"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_strelka"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E5E5E5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/flag_image2"
                android:scaleType="centerCrop"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/country_tv2"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_15ssp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USD"
                android:layout_marginLeft="@dimen/_5sdp"/>
        </LinearLayout>


        <LinearLayout

            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:textSize="@dimen/_12ssp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sotib olish"/>

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/buy_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 530,87 UZS"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:textSize="@dimen/_12ssp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sotish"/>

                <TextView
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    android:id="@+id/cell_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 530,87 UZS"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>
</LinearLayout>