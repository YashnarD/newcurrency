                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#798B73"
                app:cardCornerRadius="4dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/item_card4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#798B73"
                app:cardCornerRadius="4dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/item_card5"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#798B73"
                app:cardCornerRadius="4dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/item_card6"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#798B73"
                app:cardCornerRadius="4dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/item_card7"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#798B73"
                app:cardCornerRadius="4dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/item_card8"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#798B73"
                app:cardCornerRadius="4dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/item_card9"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#798B73"
                app:cardCornerRadius="4dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/item_card10"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#798B73"
                app:cardCornerRadius="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>